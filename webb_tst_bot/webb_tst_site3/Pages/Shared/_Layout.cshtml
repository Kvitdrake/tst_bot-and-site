<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Генератор рун</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">@*
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Временный стиль для проверки */
        body {
            background-color: red !important;
        }
    </style>
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">
                    <i class="fas fa-dragon me-2"></i>Генератор рун
                </a>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <div class="container py-4">
        <main role="main">
            @if (ViewContext.RouteData.Values["page"]?.ToString() != "/Index")
            {
                <div class="mb-4">
                    <a href="/" class="btn btn-outline-primary">
                        <i class="fas fa-home"></i> На главную
                    </a>
                    @if (ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Admin") == true)
                    {
                        <a href="/Admin" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-tachometer-alt"></i> Панель управления
                        </a>
                    }
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="footer py-3 bg-dark text-white mt-auto">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - Генератор рун
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Styles", required: false)
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>