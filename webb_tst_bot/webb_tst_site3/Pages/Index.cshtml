@page
@model IndexModel
@{
    ViewData["Title"] = "Генератор рун";
}

<div class="container text-center mt-5">
    <h1 class="display-4 mb-4">Добро пожаловать в генератор рун</h1>

    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body">
            @if (!User.Identity.IsAuthenticated)
            {
                <h3 class="mb-4">Выберите роль:</h3>
                <div class="d-grid gap-3">
                    <a href="/Randomizer" class="btn btn-primary btn-lg py-3">
                        <i class="fas fa-user me-2"></i>Пользователь
                    </a>
                    <a href="/Admin/Login" class="btn btn-outline-secondary btn-lg py-3">
                        <i class="fas fa-lock me-2"></i>Администратор
                    </a>
                </div>
            }
            else if (User.IsInRole("Admin"))
            {
                <div class="alert alert-info">
                    <i class="fas fa-user-shield me-2"></i>Вы вошли как администратор
                </div>
                <div class="d-grid gap-3">
                    <a href="/Admin" class="btn btn-primary btn-lg py-3">
                        <i class="fas fa-tachometer-alt me-2"></i>Панель управления
                    </a>
                    <a href="/Randomizer" class="btn btn-outline-primary btn-lg py-3">
                        <i class="fas fa-random me-2"></i>Генератор рун
                    </a>
                </div>
            }
            else
            {
                <div class="d-grid">
                    <a href="/Randomizer" class="btn btn-primary btn-lg py-3">
                        <i class="fas fa-random me-2"></i>Перейти к генератору
                    </a>
                </div>
            }
        </div>
    </div>
</div>